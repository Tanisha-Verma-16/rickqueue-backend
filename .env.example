# ============================================
# RICKQUEUE BACKEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ============================================

# ===== APPLICATION =====
APP_NAME=RickQueue API
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# ===== SERVER =====
HOST=0.0.0.0
PORT=8000

# ===== DATABASE (PostgreSQL) =====
# Option 1: Full connection string
DATABASE_URL=postgresql://username:password@host:5432/rickqueue

# Option 2: Individual components (if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rickqueue
DB_USER=postgres
DB_PASSWORD=your_password_here

# ===== FIREBASE =====
# Path to Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ===== CORS ORIGINS =====
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,https://rickqueue.com

# ===== AI CONFIGURATION =====
AI_SCHEDULER_INTERVAL_SECONDS=30
AI_PROBABILITY_THRESHOLD_LOW=20
AI_PROBABILITY_THRESHOLD_HIGH=80
AI_MIN_WAIT_TIME_SECONDS=180
AI_MAX_WAIT_TIME_SECONDS=600

# ===== WEBSOCKET =====
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/rickqueue.log

# ===== SECURITY =====
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=60

# ===== BACKGROUND JOBS =====
HISTORICAL_DATA_REBUILD_HOUR=2

# ===== DEPLOYMENT (Railway/Render specific) =====
# These are usually set automatically by the platform
# PORT=8000
# DATABASE_URL=postgresql://...

# ===== DEVELOPMENT ONLY =====
# Set to true to see SQL queries
# DEBUG=true